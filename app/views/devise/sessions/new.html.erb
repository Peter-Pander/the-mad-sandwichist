<h2 class="login-heading">Log in</h2>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "login-input" },
                label_html: { class: "login-label" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: "login-input" },
                label_html: { class: "login-label" } %>
    <%= f.input :remember_me,
                as: :boolean,
                label_html: { class: "login-label" } if devise_mapping.rememberable? %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "auth-button" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
