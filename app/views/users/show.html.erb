<div class="profile-background d-flex justify-content-center align-items-center flex-column">
  <div class="profile-header">
    <%= image_tag "top-bar-profile", alt: "No Restrictions Applied", class: "profile-header-image" %>
    <%# <div class="inner-banner"> %>
      <%# <h1>User Show Page</h1> %>
    <%# </div> %>
  </div>
  <div class="license-card">
    <div class="d-flex justify-content-center">
      <h1 class="profile-card-header">Mad Sandwichist License</h1>
    </div>
    <div class="diet-name d-flex flex-row">
      <div class="dietary">
        <%= image_tag "dietary-stamp", alt: "No Restrictions Applied", class: "restriction-image" %>
      </div>
      <div class="name-field">
        <span class="label">Name</span>
        <span class="user-name"><%= @user.username.present? ? @user.username : @user.email %></span>
      </div>    </div>
    <div class="allergy-list">
      <p>I have allergies!</p>
    </div>
  </div>
  <div class="trophy-case">
    <div class="trophy-header">
      <h1>Trophy Case</h1>
    </div>
    <ul>
      <% current_user.badges.each do |badge| %>
        <li><%= badge.name %></li>
      <% end %>
    </ul>
  </div>
</div>
